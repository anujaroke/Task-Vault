<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>To-Do List</h1>
            <div class="user-info">
                <span>Welcome, <b>
                        <%= user.username %>
                    </b></span>
                <a href="/logout" class="btn-logout">Logout</a>
            </div>
        </div>

        <form action="/add" method="POST" class="add-form">
            <input type="text" name="task" placeholder="Enter a new task..." required>
            <button type="submit">Add Task</button>
        </form>

        <ul class="task-list">
            <% if (tasks.length> 0) { %>
                <% tasks.forEach(function(task) { %>
                    <li class="task-item <%= task.is_completed ? 'completed' : '' %>" id="task-<%= task.id %>">
                        <div style="display: flex; align-items: center; flex-grow: 1;">
                            <input type="checkbox" class="task-checkbox" onchange="toggleComplete(<%= task.id %>, this)"
                                <%=task.is_completed ? 'checked' : '' %>>
                            <span class="task-text">
                                <%= task.task %>
                            </span>
                        </div>
                        <div class="task-actions">
                            <a href="/edit/<%= task.id %>" class="btn-edit">Edit</a>
                            <a href="/delete/<%= task.id %>" class="btn-delete"
                                onclick="return confirm('Are you sure?')">Delete</a>
                        </div>
                    </li>
                    <% }); %>
                        <% } else { %>
                            <li class="no-tasks">No tasks found. Add one above!</li>
                            <% } %>
        </ul>
    </div>

    <script>
        function toggleComplete(taskId, checkbox) {
            const isCompleted = checkbox.checked;
            const listItem = document.getElementById(`task-${taskId}`);

            fetch(`/complete/${taskId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `completed=${isCompleted}`
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        if (isCompleted) {
                            listItem.classList.add('completed');
                        } else {
                            listItem.classList.remove('completed');
                        }
                    } else {
                        alert('Error updating task');
                        checkbox.checked = !isCompleted; // Revert
                    }
                })
                .catch(err => {
                    console.error(err);
                    alert('Error updating task');
                    checkbox.checked = !isCompleted; // Revert
                });
        }
    </script>
</body>

</html>